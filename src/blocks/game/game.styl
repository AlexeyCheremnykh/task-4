@import "../../colors"

.game
  display: flex
  flex-direction: column
  align-items: center

  &__title
    font-weight: 400

  &__grid
    display: flex
    flex-wrap: wrap
    box-shadow: 0 0 10px 0px $semitransparent-black
    cursor: pointer

  &__grid-cell
    box-sizing: border-box
    height: 12px
    width: 12px
    border: 1px solid $grey-bb

    &_alive
      background-color: $red

  &__buttons
    margin: 15px 0

  &__button
    width: 100px
    height: 40px
    background-color: $grey-e5
    border: 1px solid $grey-88
    cursor: pointer

    &:hover
      background-color: $grey-ef

  &__one-step
    margin: 0 10px

  &__settings
    text-align: center

  &__grid-size
    display: block
    margin-bottom: 10px

  &__input
    border: 1px solid $grey-99
    width: 50px
    margin-left: 5px

  &__wrong-input
    outline-color: red
    background-color: $semitransparent-red;
    border: 1px solid red
