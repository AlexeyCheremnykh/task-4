@import "../../colors"

.game
  display flex
  flex-direction column
  align-items center

  &__title
    font-weight 400

  &__grid
    display flex
    flex-wrap wrap
    box-shadow 0 0 0.625rem 0rem $semitransparent-black
    cursor pointer

  &__grid-cell
    box-sizing border-box
    border 0.0625rem solid $grey-bb

    &_alive
      background-color $red

  &__buttons
    margin 0.9375rem 0

  &__button
    width 6.25rem
    height 2.5rem
    background-color $grey-e5
    border 0.0625rem solid $grey-88
    cursor pointer

    &:hover
      background-color $grey-ef

  &__one-step
    margin 0 0.625rem

  &__settings
    text-align center

  &__grid-size
    display block
    margin-bottom 0.625rem

  &__input
    border 0.0625rem solid $grey-99
    width 3.125rem
    margin-left 0.3125rem

    &_invalid
      outline-color red
      background-color $semitransparent-red;
      border 0.0625rem solid red

  &__game-over
    border 0.0625rem solid $green
    background-color $semitransparent-green
    border-radius 0.25rem
    margin-top 0.9375rem
    padding 0.3125rem
    width 12.5rem
    text-align center
